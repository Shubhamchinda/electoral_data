<script>
    $("#gender").val('{{gender}}');
    $("#mark").val('{{mark}}');
    $("#otherselect").val('{{occupation}}');
    if("{{districtOwn}}"){

        document.getElementById('districtHi').disabled = false;
        document.getElementById('districtHi').value='{{districtOwn}}';

    }

    $('#block').append($('<option>', {
        value: '{{blockOwn}}',
        text: '{{blockOwn}}',
        selected: true
    }));

    $('#village').append($('<option>', {
        value: '{{villageOwn}}',
        text: '{{villageOwn}}',
        selected: true
    }));
</script>


<script>
    function otherBox(){
        var othervalue = document.getElementById("otherselect").value;

        if(othervalue=="other"){
            document.getElementById('otherOcc').disabled = false;
            document.getElementById("otherocc").style.display = "block";
        }
        else {
            document.getElementById("otherocc").style.display = "none";
        }
    };
</script>
<script>
    if('{{message}}'=='Mobile/Email already exists.'){
        document.getElementById('name').value='{{name}}';
    }
    if('{{addC}}'!='on'){
        document.getElementById('forAddData').disabled = true;
    }
    if('{{addA}}'!='on'){
        document.getElementById('forAddAdmin').disabled = true;
    }
    if('{{aedAddress}}'!='on'){
        document.getElementById('forAddress').disabled = true;
    }
    if('{{superAdmin}}'!='false'){
        document.getElementById('forRequest').disabled = true;
    }
</script>
