<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="apple-touch-icon" sizes="76x76" href="apple-icon.png">
        <link rel="icon" type="image/png" href="favicon.png">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="Author" content="hemant.me"/>
        <title>Electoral - Forgot Passwors</title>

        <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />

        <!--     Fonts and icons     -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />

        <!-- CSS Files -->
        {{> bootstrap}}
        {{> materialkit}}

    </head>

    <body style="background-color: #eee;">
        <div class="section">
            <div class="container">
                <nav class="navbar navbar-transparent navbar-fixed-top" role="navigation">
                    <div class="container">
                        <div class="navbar-header">
                            <a href="#">
                                <div class="logo">
                                    <img src="logo.png" alt="Electoral Logo">
                                </div>
                            </a>
                        </div>
                    </div><!-- /.container-fluid -->
                </nav>
            </div></div>









        <div class="wrapper" style="margin-top: -80px;">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">

                        <div class="card card-nav-tabs card-signup">
                            <form class="form" method="POST" action="/forgot">
                                



                                        <div class="content" style="padding-left: 40px; padding-top: 40px;">
                                           
                                           <h4 style="font-weight: 500; text-align-last: center; ">Forgot Password</h4>
                                            <div class="form-group label-floating">
                                                <label class="control-label">Email</label>
                                                <input type="email" class="form-control" required>
                                            </div>

                                            
                                            <div class="row">
                                                <div class="col-xs-6">
                                                    <div class="radio pull-left" style="margin-left: -15px; margin-right: -20px; margin-bottom: 20px;">
                                                        <label>
                                                            <input type="radio" name="optionsRadios" id="otpop" onchange="otpShow(1)" >
                                                            <strong>Via OTP</strong>
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="col-xs-6">
                                                    <div class="radio pull-left" style="margin-left: -15px; margin-right: -20px; margin-bottom: 20px;">
                                                        <label>
                                                            <input type="radio" name="optionsRadios" id="mailop" onchange="otpShow(2)" >
                                                            <strong>Via Email</strong>
                                                        </label>
                                                    </div>
                                                </div>
                                                
                                            </div>

                                            <div class="row">
                                              <div id="emptybox" style="display: block;">
                                               <div class="col-xs-12" >
                                                 <br><br><br>
                                                  </div>
                                                </div>
                                               <div id="mailbox" style="display: none;">
                                                    <div class="col-xs-9" >
                                                        <div class="form-group label-floating" style="margin-top: 10px;">
                                                            <label class="control-label">Enter Email Verification Code</label>
                                                            <input type="text" class="form-control" required>
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-3" >
                                                        <a href="#" class="btn btn-simple btn-primary btn-xs pull-right" style="margin-top: 20px; margin-right: -15px;  ">Resend Code</a>
                                                    </div>
                                                </div>
                                                
                                                <div id="otpbox" style="display: none;">
                                                    <div class="col-xs-9" >
                                                        <div class="form-group label-floating" style="margin-top: 10px;">
                                                            <label class="control-label">Enter OTP</label>
                                                            <input type="text" class="form-control" required>
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-3" >
                                                        <a href="#" class="btn btn-simple btn-primary btn-xs pull-right" style="margin-top: 20px; margin-right: -15px;  ">Resend OTP</a>
                                                    </div>
                                                </div>

                                            </div>
                                            <br>


                                            <div class="row">
                                                <div class="col-md-6">

                                                   
                                                </div>
                                                <div class="col-md-6">
                                                    <button class="btn btn-primary pull-right" id="add_data" style="width: 100%;">Submit</button>
                                                </div>
                                            </div>
                                        </div>
                            </form>
                        </div>
                    </div>
                </div>
                <br><br><br><br><br>
            </div>


        </div>
        <footer class="footer footer-transparent">
            <div class="container">
                <div class="copyright">
                    &copy; 2018 Electoral | Powered by Genesis
                </div>
            </div>
        </footer>
        <script type="text/javascript">
            function otpShow(a){
                var x = document.getElementById("otpbox");
                var y = document.getElementById("mailbox");
                document.getElementById("emptybox").style.display="none";
                if(a==1) {
                    x.style.display = "block";
                    y.style.display = "none";
                }
                else if(a==2){
                    y.style.display = "block";
                    x.style.display = "none";
                }
//                if (x.style.display === "none") {
//                    x.style.display = "block";
//                } else {
//                    x.style.display = "none";
//                }
            }

        </script>
    </body>
    {{> jquery}}
    {{> bootstrapjs}}
    {{> material.min}}

    <!-- Control Center for Material Kit: activating the ripples, parallax effects, scripts from the example pages etc -->
    {{> materialkitjs}}
</html>
