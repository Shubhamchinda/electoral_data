            <h2 class="text-center">Search Citizen Data</h2>
            <div class="row">
                <form action="" autocomplete="off">


                <div class="col-md-12" style="margin: 0px !important;">
                    <div class=" row boxrow">
                        <div class="col-md-12">
                            <strong class="labelh pull-left">Address</strong>
                        </div>
                        <div class="col-md-3" style="margin: 0px !important;">

                            <div class="form-group label-floating">
                                <label class="control-label">State</label>
                                <select  name="state" id="state" onchange="sort(value,0)" class="form-control">

                                    <option value="Andaman and Nicobar Islands">Andaman and Nicobar Islands</option>
                                    <option value="Andhra Pradesh">Andhra Pradesh</option>
                                    <option value="Arunachal Pradesh">Arunachal Pradesh</option>
                                    <option value="Assam">Assam</option>
                                    <option value="Bihar">Bihar</option>
                                    <option value="Chandigarh">Chandigarh</option>
                                    <option value="Chhattisgarh">Chhattisgarh</option>
                                    <option value="Dadra and Nagar Haveli">Dadra and Nagar Haveli</option>
                                    <option value="Daman and Diu">Daman and Diu</option>
                                    <option value="Delhi">Delhi</option>
                                    <option value="Goa">Goa</option>
                                    <option value="Gujarat">Gujarat</option>
                                    <option value="Haryana">Haryana</option>
                                    <option value="Himachal Pradesh">Himachal Pradesh</option>
                                    <option value="Jammu and Kashmir">Jammu and Kashmir</option>
                                    <option value="Jharkhand">Jharkhand</option>
                                    <option value="Karnataka">Karnataka</option>
                                    <option value="Kerala">Kerala</option>
                                    <option value="Lakshadweep">Lakshadweep</option>
                                    <option value="Madhya Pradesh">Madhya Pradesh</option>
                                    <option value="Maharashtra">Maharashtra</option>
                                    <option value="Manipur">Manipur</option>
                                    <option value="Meghalaya">Meghalaya</option>
                                    <option value="Mizoram">Mizoram</option>
                                    <option value="Nagaland">Nagaland</option>
                                    <option value="Orissa">Orissa</option>
                                    <option value="Pondicherry">Pondicherry</option>
                                    <option value="Punjab">Punjab</option>
                                    <option value="Rajasthan">Rajasthan</option>
                                    <option value="Sikkim">Sikkim</option>
                                    <option value="Tamil Nadu">Tamil Nadu</option>
                                    <option value="Tripura">Tripura</option>
                                    <option value="Uttarakhand" selected="selected">Uttarakhand</option>
                                    <option value="Uttar Pradesh">Uttar Pradesh</option>
                                    <option value="West Bengal">West Bengal</option>
                                </select>
                            </div>

                        </div>

                        <div class="col-md-3" style="margin: 0px !important;">
                            <div class="form-group label-floating">
                                <label class="control-label">District</label>
                                <select  name="district" id="district" onchange="getBlock(value,document.getElementById('state').value); sort(value,1);" required class="form-control">
                                </select>
                            </div>
                        </div>

                        <div class="col-md-2" style="margin: 0px !important;">
                            <div class="form-group label-floating">
                                <label class="control-label">Block/Nagar palika</label>
                                <select  name="block" id="block" onchange="getVillage(document.getElementById('district').value,document.getElementById('state').value,value); sort(value,2);" class="form-control">
                                </select>

                            </div>
                        </div>

                        <div class="col-md-2" style="margin: 0px !important;">
                            <div class="form-group label-floating">
                                <label class="control-label">Village</label>
                                <select name="village" id="village" onchange="sort(value,3)" class="form-control">
                                </select>
                                </div>
                        </div>

                        <div class="col-md-2" style="margin: 0px !important;">
                            <div class="form-group label-floating">
                                <label class="control-label">Pin Code</label>
                                <input  type="number" name="pin" id="pin" onchange="sort(value,4)" class="form-control">
                            </div>
                        </div>

                    </div>
                </div>

                <div class="col-md-12">
                    <div class=" row boxrow">
                        <div class="col-md-12">
                            <strong class="labelh">Name</strong>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group label-floating">
                                <label class="control-label">First Name </label>
                                <input type="text" name="firstName" id="firstName" onchange="sort(value,5)" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group label-floating">
                                <label class="control-label">Middle Name</label>
                                <input  type="text" name="middleName" id="middleName" onchange="sort(value,6)" class="form-control">
                            </div>

                        </div>
                        <div class="col-md-4">
                            <div class="form-group label-floating">
                                <label class="control-label">Last Name</label>
                                <input  type="text" name="lastName" id="lastName" onchange="sort(value,7)" class="form-control">
                            </div>
                        </div>
                    </div>





                </div>

                    <div class="col-md-12">
                        <div class=" row boxrow">
                            <div class="col-md-12">
                                <strong class="labelh">Relation Name</strong>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group label-floating">
                                    <label class="control-label">First Name </label>
                                    <input type="text" name="relationName" id="relationName" onchange="sort(value,8)" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group label-floating">
                                    <label class="control-label">Middle Name</label>
                                    <input  type="text" name="relationMiddle" id="relationMiddle" onchange="sort(value,9)" class="form-control">
                                </div>

                            </div>
                            <div class="col-md-4">
                                <div class="form-group label-floating">
                                    <label class="control-label">Last Name</label>
                                    <input  type="text" name="relationLast" id="relationLast" onchange="sort(value,10)" class="form-control">
                                </div>
                            </div>
                        </div>





                    </div>


                <div class="col-md-6" style="margin: 0px !important;">
                    <div class=" row boxrow">
                        <div class="col-md-12">
                            <strong class="labelh pull-left">Age Range</strong>
                        </div>
                        <div class="col-md-6" style="margin: 0px !important;">

                            <div class="form-group label-floating">
                                <label class="control-label">From Age</label>
                                <input  type="number" name="minage" id="minage" onchange="sort(value,11)" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-6" style="margin: 0px !important;">

                            <div class="form-group label-floating">
                                <label class="control-label">To Age</label>
                                <input  type="number" name="maxage" id="maxage"  onchange="sort(value,12)" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>



                <div class="col-md-6">
                    <div class=" row boxrow">
                        <div class="col-md-12">
                            <strong class="labelh pull-left">Occupation</strong>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group label-floating">
                                <select class="form-control" id= "occ" name="occ" onchange="otherBox(); sort(value,13)">
                                    <option value="" selected></option>
                                    <option value="doctor">Doctor</option>
                                    <option value="advocate">Advocate</option>
                                    <option value="teacher">Teacher</option>
                                    <option value="Ex. Serviceman">Ex. Serviceman</option>
                                    <option value="Retired Employee">Retired Employee</option>
                                    <option value="Farmer">Farmer</option>
                                    <option value="Private Employee">Private Employee</option>
                                    <option value="Govt. Employee">Govt. Employee</option>
                                    <option value="Business Man">Business Man</option>
                                    <option value="student">Student</option>
                                    <option value="other">Other</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6" style="display: none;" id="otherocc">
                            <div class="form-group label-floating">
                                <label class="control-label">Enter Occupation</label>
                                <input  type="text" name="occother" id="occother" class="form-control" onchange="sort(value,14)">
                            </div>
                        </div>


                    </div>
                </div>









                <div class="col-md-3">
                    <div class="row boxrow">
                        <div class="col-md-12">
                            <strong class="labelh pull-left">Mobile</strong>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group label-floating">
                                <label class="control-label">Enter Mobile</label>
                                <input  type="number" name="mobile" id="mobile" onchange="sort(value,15)" class="form-control">
                            </div>

                        </div>

                    </div>
                </div>

                <div class="col-md-3">
                    <div class="row boxrow">
                        <div class="col-md-12">
                            <strong class="labelh pull-left">Email</strong>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group label-floating">
                                <label class="control-label">Enter Email</label>
                                <input  type="email" name="email" onchange="sort(value,16)" id="email" class="form-control">
                            </div>

                        </div>

                    </div>
                </div>




                <div class="col-md-3" >
                    <div class=" row boxrow">
                        <div class="col-md-12">
                            <strong class="labelh pull-left">Gender</strong>
                        </div>
                        <div class="col-md-12">

                            <div class="form-group label-floating">

                                <select  name="gender" id="gender" onchange="sort(value,17)" class="form-control">
                                    <option value="" selected></option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>






                <div class="col-md-3">
                    <div class="row boxrow">
                        <div class="col-md-12">
                            <strong class="labelh pull-left">Mark</strong>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group label-floating is-empty">
                                <label class="control-label">Mark</label>
                                <select name="mark" id="mark" onchange="sort(value,18)" class="form-control">
                                    <option value="" selected="selected"></option>
                                    <option value="P">Pramukh</option>
                                    <option value="Z">Zila Panchayat</option>
                                    <option value="BDC">BDC Member</option>
                                    <option value="GP">Gram Pradhan</option>
                                    <option value="AS">Asha</option>
                                    <option value="ANG">Aaganbadi</option>
                                    <option value="EX">Ex Army</option>
                                    <option value="YS">Youth Solder</option>
                                    <option value="YF S">Youth Student</option>
                                    <option value="YMD">Yowak Mongal Dal</option>
                                    <option value="GPR">Gram Parhari</option>
                                    <option value="WB">Well Wisher</option>
                                </select>
                            </div>


                        </div>
                    </div>

                </div>


            </div><!-- main ROW end-->


            <div class="row">
                <div class="col-md-12">
                    <input type="button" onclick="querySearch(
                    document.getElementById('state').value,
                    document.getElementById('district').value,
                    document.getElementById('block').value,
                    document.getElementById('village').value,
                    document.getElementById('pin').value,
                    document.getElementById('firstName').value,
                    document.getElementById('middleName').value,
                    document.getElementById('lastName').value,
                    document.getElementById('relationName').value,
                    document.getElementById('relationMiddle').value,
                    document.getElementById('relationLast').value,
                    document.getElementById('minage').value,
                    document.getElementById('maxage').value,
                    document.getElementById('occ').value,
                    document.getElementById('occother').value,
                    document.getElementById('mobile').value,
                    document.getElementById('email').value,
                    document.getElementById('gender').value,
                    document.getElementById('mark').value)"  class="btn btn-primary pull-right" value="Search" >
                </div>
            </div>
        </form>
        <br>
