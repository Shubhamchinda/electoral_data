<script>
    if('{{level}}'==='village'){
        document.getElementById('stateRadio').disabled = true;
        document.getElementById('districtRadio').disabled = true;
        document.getElementById('blockRadio').disabled = true;

        document.getElementById('state').disabled = true;
        document.getElementById('district').disabled = true;
        document.getElementById('village').disabled = true;
        document.getElementById('block').disabled = true;

        document.getElementById('villageL').value='{{village}}';
        document.getElementById('blockL').value='{{block}}';
        document.getElementById('districtL').value='{{district}}';
        document.getElementById('stateL').value='{{state}}';
    }
    if('{{level}}'==='block'){
        document.getElementById('stateRadio').disabled = true;
        document.getElementById('districtRadio').disabled = true;

        document.getElementById('state').disabled = true;
        document.getElementById('district').disabled = true;
        document.getElementById('block').disabled = true;

        document.getElementById('blockL').value='{{block}}';
        document.getElementById('districtL').value='{{district}}';
        document.getElementById('stateL').value='{{state}}';
    }
    if('{{level}}'==='district'){
        document.getElementById('stateRadio').disabled = true;

        document.getElementById('state').disabled = true;
        document.getElementById('district').disabled = true;

        document.getElementById('districtL').value='{{district}}';
        document.getElementById('stateL').value='{{state}}';
    }
    if('{{level}}'==='state'){
        document.getElementById('state').disabled = true;
        document.getElementById('stateL').value='{{state}}';
    }
</script>
<script>
    if('{{editC}}'!='on'){
        document.getElementById('forCivilEdit').disabled = true;
    }
    if('{{addC}}'!='on'){
        document.getElementById('forCivilAdd').disabled = true;
    }
    if('{{addA}}'!='on'){
        document.getElementById('forAdminAdd').disabled = true;
    }
    if('{{message}}'=='0'){
        document.getElementById('forMessage').disabled = true;
    }
    else{
        document.getElementById('forMessage').value='{{message}}';
        document.getElementById('forMessage').disabled = false;
    }
    if('{{print}}'=='0'){
        document.getElementById('forPrint').disabled = true;
    }
    else{
        document.getElementById('forPrint').value='{{print}}';
        document.getElementById('forPrint').disabled = false;
    }
</script>
