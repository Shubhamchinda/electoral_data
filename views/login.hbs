<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="apple-touch-icon" sizes="76x76" href="apple-icon.png">
        <link rel="icon" type="image/png" href="favicon.png">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <title>Electoral - Log-in</title>

        <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />

        <!--     Fonts and icons     -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />

        <!-- CSS Files -->
        <link rel="stylesheet" href="/bootstrap.css">
        <!--{{> bootstrap}}-->
        <link rel="stylesheet" href="/materialkit.css">
        <!--{{> materialkit}}-->

        {{> styleLogin}}
        {{> inputtype}}

        <!--js files-->
        <link rel="stylesheet" href="/jquery.min.js">
        <!--{{> jquery}}-->



    </head>

    <body style="background-color: #eee;">
        <div class="section">
            <div class="container">
                <nav class="navbar navbar-transparent navbar-fixed-top" role="navigation">
                    <div class="container">
                        <div class="navbar-header">
                            <a href="#">
                                <div class="logo">
                                    <img src="logo.png" alt="Electoral Logo">
                                </div>
                            </a>
                        </div>
                    </div><!-- /.container-fluid -->
                </nav>
            </div>
            </div>
            

        <div class="wrapper" style="margin-top: -80px;">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                       
                        <div class="card card-nav-tabs card-signup">
                            <form class="form" method="post" autocomplete="off" action="/">
<!--
                                <div class="header header-info text-center">
                                   
                                    <h4 style="font-weight: 500; ">Sign In</h4>

                                </div>
--><ul class="nav nav-pills nav-pills-rose ">
                                <li class="nav-item active" style="width: 50%; ">
                                    <a class="nav-link active show" href="#signinpage" data-toggle="tab" style="width: 100%; border-radius: 0px;">Sign In</a>
                                </li>
                                <li class="nav-item" style="width: 50%; float: left; margin: 0px;">
                                    <a class="nav-link" href="/addCivildata" style="width: 100%; border-radius: 0px;">Sign Up</a>
                                </li>
                            </ul>
                               <div class="tab-content tab-space">
                                <div class="tab-pane active " id="signinpage">
                                   <div class="content" style="padding-left: 40px;">

                                       <div class="form-group label-floating">
                                        <label class="control-label">Email-Id</label>
                                        <input type="email" id="email" name="email" class="form-control" autocomplete="on" required>
                                           <div id="otperror" class="errmsg">Wrong E-mail!</div>

                                       </div>

                                    <div class="form-group label-floating">

                                        <label class="control-label">Password</label>
                                        <input type="password" id="password" name="password" class="form-control" required>
                                    </div>

    <hr><h4 class="text-center" style="font-weight: 500; margin-top: -34px; margin-bottom: 0px; ">OR</h4>
                                    
                                    

                                    <div class="row">
                                        <div class="col-xs-3">
                                           
                                            <div class="checkbox pull-left" style="margin-left: -15px; margin-right: -20px; margin-bottom: 20px;">
                                                <label>
                                                    <input type="checkbox" id="checkboxLogin" name="optionsCheckboxes" onchange="otpShow(document.getElementById('email').value)" >
                                                   <strong>OTP</strong>
                                                </label>
                                            </div>
                                        </div>
                                           <div id="otpbox" style="display: none;">
                                            <div class="col-xs-6" >
                                            <div class="form-group label-floating" style="margin-top: 10px;">

                                        <label class="control-label">Enter OTP</label>
                                        <input type="text" name="enterotp" class="form-control numeric" required>
                                    </div>
                                            </div>
                                            <div class="col-xs-3" >
                                                <input type="button"  disabled id="resendOTP" onclick="ResendOTP()" class="btn btn-simple btn-primary btn-xs pull-right" style="margin-top: 25px; margin-right: -15px;" value="Resend OTP">
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-md-12">
            <div id="captcha" onmousedown='return false;' onselectstart='return false;' class="panel panel-default text-center">
               </div>



<div class="form-group label-floating"><label class="control-label">Enter Captcha </label>
                                            <input class="form-control" id="captchaField" name="captcha" onkeyup="checkCaptcha(value)" required type="text">
</div> </div>
                                            
                                    </div>


                                    <div class="row">
                                        <div class="col-md-6">

                                            <!--<a href="/forgot" class="btn btn-simple btn-primary btn-xs pull-left" style="margin-top: 20px; margin-left: -15px;">Forgot Password</a>-->
                                        </div>
                                        <div id="check" class="col-md-6">
                                            <button action="submit" class="btn btn-primary pull-right" id="login_button" style="width: 100%;">Login</button>
                                        </div>
                                    </div>
                                </div>
                                    <div class="text-center" id="wrong"><h5><b>{{message}}</b></h5></div>

                                </div>

                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>


        </div>
        <footer class="footer footer-transparent">
            <div class="container">
                <div id="a" class="copyright">
                    &copy; 2018 Electoral | Powered by Genesis

                </div>
            </div>
        </footer>
<script type="text/javascript">

        </script>
        <script src="/captcha.js"></script>
    </body>
    <script src="/bootstrapjs.js"></script>
    <script src="material.min.js"> </script>
    <script src="/materialkitjs.js"></script>
    <!--{{> bootstrapjs}}-->
    <!--{{> material.min}}-->

    <script src="/otp.js"></script>
