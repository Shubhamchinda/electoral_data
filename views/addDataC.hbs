    <div class="main main-raised">
        <div class="section">
            <div class="container">






                <div class="row">
                    <h2 class="text-center">Civilian Registration</h2>
                    <form action="/queryAddedCivil" method="post">
                        <div class="col-md-12">
                            <div class="row">

                                <div class="col-md-3">
                                    <div class="form-group label-floating">
                                        <label class="control-label">*Name</label>
                                        <input required type="text" name="name" class="form-control">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="row">
                                        <div class="col-xs-9">
                                            <div class="form-group label-floating">
                                                <label class="control-label">Father Name</label>
                                                <input type="text" name="fatherName" class="form-control">
                                            </div>
                                        </div>

                                    </div>

                                </div>
                                <div class="col-md-3">
                                    <div class="row">
                                        <div class="col-xs-9">
                                            <div class="form-group label-floating">
                                                <label class="control-label">*Mobile</label>
                                                <input autocomplete="off" required type="number" name="mobile" id="mobile" max="9999999999" min="5000000000" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-xs-3">
                                            <input type="button" id="otpbutton" onclick="sendOTP(document.getElementById('mobile').value)" class="btn btn-simple btn-primary btn-md pull-right" style="margin-top: 25px; margin-right: -15px;" value="Send OTP">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="row">
                                        <div class="col-xs-9">
                                            <div class="form-group label-floating">
                                                <label class="control-label">Enter OTP</label>
                                                <input autocomplete="off"  type="number" id="otp" required name="otp" class="form-control">
                                                <div id="otperror" class="errmsg">Wrong OTP!</div>

                                            </div>
                                        </div>
                                        <div class="col-xs-3">
                                            <input type="button" id="otpbtn" class="btn btn-simple btn-primary btn-md pull-right" style="margin-top: 25px; margin-right: -15px;  " value="Validate" onclick="validateOTP(document.getElementById('otp').value)">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group label-floating">
                                        <label class="control-label">*Age</label>
                                        <input type="number" required name="age" max="100" min="0" class="form-control">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group label-floating">
                                        <label class="control-label">*Gender</label>
                                        <select  name="gender" required class="form-control">
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                            <option value="Other">Other</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group label-floating">
                                        <label class="control-label">Email</label>
                                        <input type="email" name="email" class="form-control">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group label-floating">
                                        <label class="control-label">Occupation</label>
                                        <input type="text" name="occupation" class="form-control">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class=" col-md-12">
                                        <div class="col-md-3">
                                            <div class="form-group label-floating">
                                                <label class="control-label">Mark</label>
                                                <select  name="mark" class="form-control">
                                                    <option value="" selected="selected"></option>
                                                    <option value="P">Pramukh</option>
                                                    <option value="Z">Zila Panchayat</option>
                                                    <option value="BDC">BDC Member</option>
                                                    <option value="GP">Gram Pradhan</option>
                                                    <option value="AS">Asha</option>
                                                    <option value="ANG">Aaganbadi</option>
                                                    <option value="EX">Ex Army</option>
                                                    <option value="YS">Youth Solder</option>
                                                    <option value="YF S">Youth Student</option>
                                                    <option value="YMD">Yowak Mongal Dal</option>
                                                    <option value="GPR">Gram Parhari</option>
                                                    <option value="WB">Well Wisher</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="form-group label-floating">
                                                <label class="control-label">*State</label>
                                                <select name="state" required class="form-control">
                                                    <option value="Uttaranchal" selected="selected">Uttaranchal</option>
                                                    <option value="Andaman and Nicobar Islands">Andaman and Nicobar Islands</option>
                                                    <option value="Andhra Pradesh">Andhra Pradesh</option>
                                                    <option value="Arunachal Pradesh">Arunachal Pradesh</option>
                                                    <option value="Assam">Assam</option>
                                                    <option value="Bihar">Bihar</option>
                                                    <option value="Chandigarh">Chandigarh</option>
                                                    <option value="Chhattisgarh">Chhattisgarh</option>
                                                    <option value="Dadra and Nagar Haveli">Dadra and Nagar Haveli</option>
                                                    <option value="Daman and Diu">Daman and Diu</option>
                                                    <option value="Delhi">Delhi</option>
                                                    <option value="Goa">Goa</option>
                                                    <option value="Gujarat">Gujarat</option>
                                                    <option value="Haryana">Haryana</option>
                                                    <option value="Himachal Pradesh">Himachal Pradesh</option>
                                                    <option value="Jammu and Kashmir">Jammu and Kashmir</option>
                                                    <option value="Jharkhand">Jharkhand</option>
                                                    <option value="Karnataka">Karnataka</option>
                                                    <option value="Kerala">Kerala</option>
                                                    <option value="Lakshadweep">Lakshadweep</option>
                                                    <option value="Madhya Pradesh">Madhya Pradesh</option>
                                                    <option value="Maharashtra">Maharashtra</option>
                                                    <option value="Manipur">Manipur</option>
                                                    <option value="Meghalaya">Meghalaya</option>
                                                    <option value="Mizoram">Mizoram</option>
                                                    <option value="Nagaland">Nagaland</option>
                                                    <option value="Orissa">Orissa</option>
                                                    <option value="Pondicherry">Pondicherry</option>
                                                    <option value="Punjab">Punjab</option>
                                                    <option value="Rajasthan">Rajasthan</option>
                                                    <option value="Sikkim">Sikkim</option>
                                                    <option value="Tamil Nadu">Tamil Nadu</option>
                                                    <option value="Tripura">Tripura</option>
                                                    <option value="Uttar Pradesh">Uttar Pradesh</option>
                                                    <option value="West Bengal">West Bengal</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group label-floating">
                                                <label class="control-label">*District</label>
                                                <input required type="text" name="district" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group label-floating">
                                                <label class="control-label">Block/Nagar palika</label>
                                                <input type="text" name="block" class="form-control">
                                            </div>
                                        </div>
                                    </div>

                                </div>



                                <div class="col-md-3">
                                    <div class="form-group label-floating">
                                        <label class="control-label">Village</label>
                                        <input type="text" name="village" class="form-control">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <button type="submit" id="submit" class="btn btn-primary pull-right" >Submit</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
