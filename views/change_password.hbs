<div class="wrapper">


    <div class="main main-raised">
        <div class="section">
            <div class="container">
                <h2 class="text-center">Change Password</h2>
                <div class="row">



                    <form action="/changePasswordNow" autocomplete="off" method="post">

                    <div class="col-md-4">

                        <div class=" row boxrow">
                            <div class="col-md-12">
                                <strong class="labelh">Old Password<span style="color: red">&nbsp; &#42;</span></strong>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group label-floating">
                                    <label class="control-label">Enter Old Password</label>
                                    <input required type="password" name="oldPassword" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-8">

                        <div class=" row boxrow">
                            <div class="col-md-12">
                                <strong class="labelh">Mobile<span style="color: red">&nbsp; &#42;</span></strong>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-xs-9">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Mobile</label>
                                            <input required type="number" readonly id="mobile" value="{{mobile}}" name="mobile" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-xs-3">
                                        <button type="button" id="otpbutton" onclick="sendOTPNowChange(document.getElementById('mobile').value)" class="btn btn-simple btn-primary btn-md pull-right" style="margin-top: 25px; margin-right: -15px;  ">Send OTP</button>

                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="form-group label-floating ">
                                            <label class="control-label">Enter OTP</label>
                                            <input type="number" name="otp" required class="form-control">

                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>

                    <input type="hidden" id="forAddData" value="123">
                    <input type="hidden" id="forAddAdmin" value="123">
                    <input type="hidden" id="forRequest" value="123">
                    <input type="hidden" id="forAddress" value="123">






                    <div class="col-md-12">
                        <div class=" row boxrow">
                            <div class="col-md-12">
                                <strong class="labelh">New Password<span style="color: red">&nbsp; &#42;</span></strong>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group label-floating">
                                    <label class="control-label">Enter New Password</label>
                                    <input required type="password" name="password" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group label-floating">
                                    <label class="control-label">Confirm Password</label>
                                    <input required type="password" name="confirm" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>



                        <div class="row">
